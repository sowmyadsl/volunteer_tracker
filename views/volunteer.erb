<h2> Update <%= @volunteer.first_name() %> <%= @volunteer.last_name() %></h2>
<form action="/volunteers/<%= @volunteer.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="assigned_project_id">Select a Project</label>
  <select id='assigned_project_id' name='assigned_project_id' type='text'>
    <% @projects.each() do |project| %>
    <% if project.id == @volunteer.assigned_project_id %>
    <option value="<%= project.id()%>"> <%= project.proj_name() %> </option>
    <% end %>
    <% end %>
  </select>
  <br><br>
  <label for="last_name">Edit Last name      : </label>
  <input type="text" name="last_name" value="<%= @volunteer.last_name %>">
  <br><br>
  <label for="first name">Edit first name    : </label>
  <input type="text" name="first_name" value="<%= @volunteer.first_name %>">
  <br><br>
  <label for="joining_date">Edit Joining date:</label>
  <input id="joining_date" name="joining_date" type="date" value="<%= @volunteer.joining_date %>">
  <br><br>
  <label for="leaving_date">Edit Leaving date:</label>
  <input id="leaving_date" name="leaving_date" type="date" value="<%= @volunteer.leaving_date %>">
  <br><br>
  <button type="submit">Submit</button>
</form>
<hr>
<br>
<form action="/volunteers/<%= @volunteer.id %>" method="post">
  <input type="hidden" name="_method" value="delete">
  <button type="submit">Remove Volunteer From List</button>
</form>
